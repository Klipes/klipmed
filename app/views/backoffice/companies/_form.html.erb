<%= render :partial => 'shared/errors', :locals => { :model => @company} %>

<%= form_for [:backoffice, @company] do |f| %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <%= operation %>
        </div>
        <div class="card-block">  
          </br>     
          <div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">    
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <%= f.label :company_name %>:
                <%= f.text_field :company_name, :class =>"form-control" %>
              </div>
              <div class="col-lg-6 col-md-6">
                <%= f.label :trade_name %>:
                <%= f.text_field :trade_name, :class =>"form-control" %>
              </div>              
            </div>           
            </br>
            <div class="row">
              <div class="col-md-6 col-lg-6">
                <%= f.label :email %>:
                <div class="input-group"> 
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                  </div>
                  <%= f.text_field :email, :class =>"form-control" %>
                </div>                                      
              </div>
              <div class="col-md-6">
                <%= f.label :phone %>:
                <div class="input-group"> 
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></div>
                  </div> 
                  <%= f.telephone_field :phone, :class =>"form-control" %>
                </div>                                        
              </div>
            </div>
            </br>
            <div class="row">
              <div class="col-lg-2 col-md-2">
                <%= f.label :zip %>:
                <%= f.text_field :zip, :class =>"form-control"%>
              </div>
              <div class="col-md-8">
                <br>
                <button type="button" name="buttonBuscar" id="buttonBuscar_company" class="btn btn-success buttonBox">Buscar Endere√ßo</button>
              </div>            
            </div>
            </br>
            <div class="row">
              <div class="col-lg-8 col-md-8">
                <%= f.label :address1 %>:
                <%= f.text_field :address1, :class =>"form-control" %>
              </div>
              <div class="col-lg-4 col-md-4">
                <%= f.label :number %>:
                <%= f.text_field :number, :class =>"form-control" %>
              </div>              
            </div>
            </br>
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :address2 %>:
                <%= f.text_field :address2, :class =>"form-control" %>
              </div>             
            </div>
            </br>
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :neighborhood %>:
                <%= f.text_field :neighborhood, :class =>"form-control" %>
              </div>              
            </div>  
            </br>
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :city %>:
                <%= f.text_field :city, :class =>"form-control" %>
              </div>
            </div>
            </br>
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :state %>:
                <%= f.select :state, options_state(@company.state), {}, {:class => "form-control"} %>
              </div>              
            </div>

            <%= render :partial => 'shared/submit', :locals => { :f => f, :path => backoffice_companies_path} %>        
          </div>
        </div>
      </div> 
    </div>
  </div>
<% end %>

</br>
</br>


