<div class="container center_center">
  <div class="row">
		<div class="col-md-4 offset-md-4">
    		<div class="card">
			  	<div class="card-body">	
						<div class="card_title">
							<h3>Please sign in</h3>
						</div>
						<%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:class => 'form-signin'}) do |f| %>
							<fieldset>
								<% if devise_mapping.rememberable? -%>  
									<div class="form-group">
										<%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email" %>
									</div>
									<div class="form-group">
										<%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", type: "Senha", value: "" %>
									</div>
									<div class="checkbox">
										<label>
											<%= f.check_box :remember_me %>Remember Me
										</label>
									</div>
								<% end -%>
									<!-- Change this to a button or input when using this as a form -->			
								<%= f.submit "Log in", class: "btn btn-lg btn-primary btn-block"%>
								<%= render "users/shared/links" %>
							</fieldset>
						<% end %>
			    </div>
			</div>
		</div>
	</div>
</div>