<div class="container text-center">
    <div class="row">
        <div class="col-md-4 col-md-offset-4"></div>
    
        <div class="col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">Please Sign In</h3>
                </div>
                <div class="panel-body">
                    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                        <fieldset>
                            <% if devise_mapping.rememberable? -%>  
                                <div class="form-group">
                                    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "E-mail", type: "email" %>
                                </div>
                                <div class="form-group">
                                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Password", type: "password", value: "" %>
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <%= f.check_box :remember_me %>Remember Me
                                    </label>
                                </div>
                            <% end -%>
                            <!-- Change this to a button or input when using this as a form -->
                            
                            <%= f.submit "Log in", class: "btn btn-default btn-lg btn-block"%>
                            <%= render "users/shared/links" %>
                        </fieldset>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
</div>