<%= render :partial => 'shared/top', 
  :locals => { :icon => 'fa fa-user fa-2x', :title => Customer.model_name.human,
               :new_path => new_site_customer_path, :new_path_hint => 'Nova Empresa' } %>        
</p>

<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-sm table-hover table-sm">
          <thead>
              <tr class="row">
                <th class="col-sm-9"><%= Customer.human_attribute_name("fullname") %></th>
                <th class="col-sm-2"><%= Customer.human_attribute_name("phone") %></th>
                <th class="col-sm-1"></th>
              </tr>
          </thead>
          <tbody>
            <% @customers.each do |customer| %>
              <tr class="row">
                <td class="col-sm-9"><%= customer.fullname %></td>
                <td class="col-sm-2"><%= customer.phone %></td>  
                <td class="col-sm-1">
                  <div class="pull-right">
                    <%= link_to edit_site_customer_path(customer) ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-edit"></i>
                    <% end %> 
                    <%= link_to "" ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-trash-o"></i>
                    <% end %>             
                  </div>   
                </td>    
              </tr>
            <% end %>  
          </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @customers %>
