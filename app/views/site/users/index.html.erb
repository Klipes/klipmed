          <tbody>
            <% @users.each do |user| %>
              <tr class="row">
                <td class="col-sm-9"><%= user.email %></td> 
                <td class="col-sm-2"><%= user.user_type_i18n %></td> 
                <td class="col-sm-1">
                  <div class="pull-right">
                    <%= link_to edit_site_user_path(user) ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-edit"></i>
                    <% end %> 
                    <%= link_to root_path ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-trash-o"></i>
                    <% end %>             
                  </div>   
                </td>    
              </tr>
            <% end %>  
          </tbody>
      </table>
    </div>
  </div>
</div>

