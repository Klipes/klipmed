<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-sm table-hover table-sm">
          <thead>
              <tr class="row">
                  <th class="col-sm-9"><%= User.human_attribute_name("email") %></th>
                  <th class="col-sm-2"><%= User.human_attribute_name("user_type") %></th>
