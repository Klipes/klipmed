<%= render :partial => 'shared/top', 
  :locals => { :icon => 'fa fa-user-md fa-2x', :title => Professional.model_name.human,
               :new_path => new_site_professional_path, :new_path_hint => 'Novo Professional' } %>    
</p>

<div class="col-sm-12">
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-sm table-hover">
          <thead>
              <tr class="row">
                  <th class="col-sm-9"><%= Professional.human_attribute_name("name") %></th>
                  <th class="col-sm-2"><%= Professional.human_attribute_name("phone") %></th>
                  <th class="col-sm-1"></th>
              </tr>
          </thead>
          <tbody>
            <% @professionals.each do |professional| %>
              <tr class="row">
                <td class="col-sm-9"><%= professional.fullname %></td>
                <td class="col-sm-2"><%= professional.phone %></td>  
                <td class="col-sm-1">
                  <div class="pull-right">
                    <%= link_to edit_site_professional_path(professional) ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-edit"></i>
                    <% end %> 
                    <%= link_to "" ,class: "btn btn-sm btn-default" do%>
                      <i class="fa fa-trash-o"></i>
                    <% end %>             
                  </div>   
                </td>    
              </tr>
            <% end %>  
          </tbody>
      </table>
    </div>
  </div>
</div>

<%= paginate @professionals %>
