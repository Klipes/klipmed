<%= form_for [:site, @receivable] do |f| %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <%= operation %>
        </div>
        <div class="card-block">  
          </br> 
          <div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">    
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :customer_id %>
                <%= f.collection_select :customer_id, @customers.all, :id, :fullname, {include_blank: false}, {class: "form-control"} %>
              </div>           
            </div>           
            </br>
            <div class="row">
              <div class="col-lg-12 col-md-12">
                <%= f.label :receivable_category_id %>
                <%= f.collection_select :receivable_category_id, @categories.all, :id, :description, {include_blank: false}, {class: "form-control"} %>
              </div>           
            </div>           
            </br>
            <div class="row">
              <div class="col-md-12 col-lg-12">
                <%= f.label :description %>
                <%= f.text_field :description, :class =>"form-control" %>
              </div>
            </div>
            </br>
            <div class="row">
              <div class="col-md-3">
                <label>Valor</label>
                <div class="input-group"> 
                  <div class="input-group-prepend">
                    <div class="input-group-text">R$</div>
                  </div> 
                  <%= f.text_field :amount, :value => @receivable.amount, class: 'form-control input-right' %>                 
                </div>                        
              </div>
              <div class="col-md-2">
                <label>Vencimento</label>
                <%= f.text_field :due_date, :value => @receivable.due_date.strftime("%d/%m/%Y"), :class =>"form-control datetimepicker" %>                                   
              </div>     
              <div class="col-md-2">
                <%= f.label :installment %>
                <%= f.text_field :installment, :value => @receivable.installment, :class =>"form-control" %>                                   
              </div>
            </div>
            <br>
            <div class="row">
              <div class="col-md-2">
                <%= f.label :status %>
                <%= f.select :status, options_for_select(Receivable.status_attributes_for_select, selected: @receivable.status), {}, {:class => "form-control"}%>
              </div>           
              <div class="col-lg-5 col-md-5">
                <%= f.label :payment_method_id %>
                <%= f.collection_select :payment_method_id, @payment_methods.all, :id, :description, {include_blank: false}, {class: "form-control"} %>
              </div>           
            </div>
            <%= render :partial => 'shared/submit', :locals => { :f => f, :path => site_receivables_path} %>        
          </div>
        </div>
      </div> 
    </div>
  </div>
<% end %>

