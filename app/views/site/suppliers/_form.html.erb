<%= form_for [:site, @supplier] do |f| %>
  <div class="row">
    <div class="col-md-8 offset-md-2">
      <div class="card">
        <div class="card-header">
          <%= operation %>
        </div>
        <div class="card-block">  
          </br>     
          <div class="container col-lg-12 col-md-12 col-sm-12 col-xs-12">    
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <%= f.label :supplier_name %>:
                <%= f.text_field :supplier_name, :class =>"form-control" %>
              </div>           
              <div class="col-lg-6 col-md-6">
                <%= f.label :trade_name %>:
                <%= f.text_field :trade_name, :class =>"form-control" %>
              </div>           
            </div>           
            </br>
            <div class="row">
              <div class="col-lg-6 col-md-6">
                <%= f.label :company_type %>:
                <%= f.collection_select :supplier_type, Supplier.supplier_types_i18n.map{ |a| [a.first,a.second] }, :first, :second, {include_blank: false}, {class: "form-control"} %>
              </div>
              <div class="col-lg-6 col-md-6">
                <%= f.label :identifier %>:
                <%= f.text_field :identifier, :class =>"form-control" %>
              </div>              
            </div>           
            |</br>
            <div class="row">
              <div class="col-md-8 col-lg-8">
                <%= f.label :email %>:
                <div class="input-group"> 
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-envelope" aria-hidden="true"></i></div>
                  </div>
                  <%= f.text_field :email, :class =>"form-control" %>
                </div>                                      
              </div>
              <div class="col-md-4">
                <%= f.label :phone %>:
                <div class="input-group"> 
                  <div class="input-group-prepend">
                    <div class="input-group-text"><i class="fa fa-phone" aria-hidden="true"></i></div>
                  </div> 
                  <%= f.telephone_field :phone, :class =>"form-control" %>
                </div>                                        
              </div>
            </div>
            </br>

            <!-- tabela relacionada de endereços!-->
            <%= render :partial => 'shared/address', :locals => { :f => f, :_model => @supplier, 
                :_address => :supplier_address, :_state => @supplier.supplier_address.state, 
                :_buttonLabel =>"supplier"} %>    

            <!-- Botões de Confirmar e Cancelar-->     
            <%= render :partial => 'shared/submit', :locals => { :f => f, :path => site_suppliers_path} %>        
          </div>
        </div>
      </div> 
    </div>
  </div>
<% end %>

